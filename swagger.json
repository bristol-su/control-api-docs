openapi: 3.0.0
tags:
  - name: Group
    description: Endpoints related to managing groups
info:
  title: Control
  version: '1.0.2'
  description: 'API for managing groups, users, roles, positions, tags and related data.'
  contact:
    name: Toby Twigger
    url: 'https://github.com/bristol-su/control-draft-app'
servers:
  - url: 'http://localhost:8000'
    description: Local Hosting
paths:
  '/group/{group_id}':
    parameters:
      - schema:
          type: number
        name: group_id
        in: path
        required: true
        description: ID of the group
    get:
      summary: Get information about a single group
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Group'
              examples: {}
            application/xml:
              schema:
                type: object
                properties: {}
      operationId: get-group-group_id
      security:
        - OAuth2: []
      description: Get information about a single group by ID
      tags:
        - Group
    patch:
      summary: Update a group
      operationId: patch-group-group_id
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Group'
      description: Update a group
      security:
        - OAuth2: []
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: Name of the group
                email:
                  type: string
                  description: Email of the group
      tags:
        - Group
    delete:
      summary: Delete a group
      responses:
        '200':
          description: OK
      operationId: delete-group
      description: Delete a group
      security:
        - OAuth2: []
      tags:
        - Group
  /group:
    post:
      summary: Create a new Group
      tags:
        - Group
      responses:
        '201':
          description: Created
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Group'
          headers: {}
      operationId: post-group
      description: Create a new group
      security:
        - OAuth2: []
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: Name of the new group
                email:
                  type: string
                  description: Email of the group
              required:
                - name
                - email
        description: ''
    get:
      summary: Get all groups
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Group'
              examples: {}
          headers: {}
      operationId: get-group
      description: Get all groups in control
      security:
        - OAuth2: []
      tags:
        - Group
    parameters: []
components:
  schemas:
    Group:
      title: Group
      type: object
      description: Represents a single group
      properties:
        id:
          type: string
          description: ID of the group
        data_provider_id:
          $ref: '#/components/schemas/DataGroup'
        updated_at:
          type: string
          format: date-time
        created_at:
          type: string
          format: date-time
        deleted_at:
          type: string
          format: date-time
    DataGroup:
      title: DataGroup
      type: object
      description: Represents data associated with a group
      x-examples: {}
      properties:
        id:
          description: ID of the data group
          type: number
        name:
          type: string
          description: The name of the group
        email:
          type: string
          description: Email of the group
        created_at:
          type: string
          format: date-time
          description: When the group was created
        updated_at:
          type: string
          format: date-time
          description: When the group was last updated
        deleted_at:
          type: string
          format: date-time
  securitySchemes:
    OAuth2:
      type: oauth2
      flows:
        authorizationCode:
          scopes: {}
          authorizationUrl: /oauth/authorize
          tokenUrl: /oauth/token
          refreshUrl: /oauth/token/refresh
        implicit:
          authorizationUrl: /oauth/authorize
          scopes: {}
          refreshUrl: /oauth/token/refresh
        password:
          tokenUrl: /oauth/token
          refreshUrl: /oauth/token/refresh
          scopes: {}
        clientCredentials:
          tokenUrl: /oauth/token
          refreshUrl: /oauth/token/refresh
          scopes: {}
      description: OAuth2 protocol for API Authentication
